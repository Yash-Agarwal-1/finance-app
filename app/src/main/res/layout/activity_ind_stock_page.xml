<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ind_stock_page">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$TSLA  $986.46"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="High : $1008.82"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/low"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Low : $975.30"
        app:layout_constraintTop_toBottomOf="@+id/high"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open: $978.97"
        app:layout_constraintTop_toBottomOf="@+id/low"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:textSize="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>