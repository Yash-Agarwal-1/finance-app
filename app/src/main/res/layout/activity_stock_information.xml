<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stockInformation"
    android:background="#B4E197"
    >



    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="40sp"
        android:textColor="#FAFDD6"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <!--     ONE SECTION        -->

    <TextView
        android:id="@+id/s_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@id/open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"


        />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/s_open"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textStyle="bold"

        />

    <!--     ONE SECTION        -->

    <TextView
        android:id="@+id/s_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/high"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintRight_toLeftOf="@id/high"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/open"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/open"
        app:layout_constraintLeft_toRightOf="@id/s_high"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#4E944F"
        android:textStyle="bold"


        />

    <!--     ONE SECTION        -->

    <TextView
        android:id="@+id/s_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="@string/low"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintRight_toLeftOf="@id/low"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/high" />

    <TextView
        android:id="@+id/low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/high"
        app:layout_constraintLeft_toRightOf="@id/s_low"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/red"
        android:textStyle="bold"

        />

    <!--     ONE SECTION        -->

    <TextView
        android:id="@+id/s_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/close"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@id/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/low"
        android:textSize="25dp"
        android:textStyle="bold"

        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/low"
        app:layout_constraintLeft_toRightOf="@id/s_close"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"

        />

    <!--     ONE SECTION        -->

    <TextView
        android:id="@+id/s_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/volume"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@id/volume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close"
        android:textSize="25dp"
        android:textStyle="bold"

        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintLeft_toRightOf="@id/s_volume"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"

        />



    <!--     ONE SECTION        -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/volume"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/critical_info"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>